### {{ ansible_managed }}

[Unit]
Description=Prometheus exporter for machine metrics

[Service]
Restart=always
User={{ prometheus_node_exporter_user }}
ExecStart=/usr/local/bin/node_exporter --web.listen-address="{{ prometheus_node_exporter_web_listen_address }}" --web.telemetry-path="{{ prometheus_node_exporter_web_telemetry_path }}"
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
