---

# {{ ansible_managed }}

version: "3"

services:
  zigbee2mqtt:
    container_name: "{{ zigbee2mqtt_container_name }}"
    image: "{{ zigbee2mqtt_image_base }}:{{ zigbee2mqtt_image_base_tag }}"
    user: {{ zigbee2mqtt_container_user_id }}:{{ zigbee2mqtt_container_user_id }}
    group_add:
      - {{ zigbee2mqtt_container_user_group }}
    env_file: zigbee2mqtt.env
    networks:
      - {{ docker_networks.proxy.name }}
    # Volumes store your data between container upgrades
    volumes:
{% for volume in zigbee2mqtt_container_volumes.binds %}
      - {{ volume.source }}:{{ volume.target }}
{% endfor %}
    devices:
      - /dev/serial/by-id/{{ zigbee2mqtt_zigbee_host_usb_device_id }}:{{ zigbee2mqtt_zigbee_container_usb_device_id }}
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network={{ docker_networks.proxy.name }}"
      - "traefik.http.routers.zigbee2mqtt1.rule=Host(`zigbee2mqtt.{{ home_lan_domain }}`)"
      - "traefik.http.routers.zigbee2mqtt1.entrypoints=websecure"
      - "traefik.http.routers.zigbee2mqtt1.middlewares=secureHeaders@file"
      - "traefik.http.routers.zigbee2mqtt1.tls=true"
      - "traefik.http.routers.zigbee2mqtt1.tls.certresolver=letsEncrypt"
      - "traefik.http.routers.zigbee2mqtt1.service=zigbee2mqtt-svc"
      - "traefik.http.services.zigbee2mqtt-svc.loadbalancer.server.port=8080"
    restart: "always"
networks:
  {{ docker_networks.proxy.name }}:
    external: true