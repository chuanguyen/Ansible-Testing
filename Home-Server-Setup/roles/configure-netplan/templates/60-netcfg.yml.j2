network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      dhcp4: no
      addresses:
        - {{ ansible_default_ipv4.address }}/{{ home_lan_cidr | ansible.netcommon.ipaddr('prefix') }}
      gateway4: {{ home_lan_gateway }}
      nameservers:
        addresses:
          - 1.1.1.1
          - 8.8.8.8
