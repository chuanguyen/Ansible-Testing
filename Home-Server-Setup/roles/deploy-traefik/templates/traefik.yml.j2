# {{ ansible_managed }}
# traefik.yml
api:
  dashboard: true

entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure

  websecure:
    address: :443
    http:
      middlewares:
        - secureHeaders@file
  wireguard:
    address: :51820/udp

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    filename: /configurations/traefik-dynamic.yml

certificatesResolvers:
  letsEncrypt:
    acme:
      email: services+letsencrypt@chuanguyen.ca
      storage: /letsEncrypt/acme.json
      dnsChallenge:
        provider: "cloudflare"
